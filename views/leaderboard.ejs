<nav class="level">
        <!-- Left side -->
        <div class="level-left">
            <h2 class="title is-2">Leaderboards</h2>
        </div>
      
        <!-- Right side -->
        <div class="level-right">
                <div class="dropdown is-right is-hoverable" id="platform-drop">
                        <div class="dropdown-trigger">
                          <button class="button" aria-haspopup="true" aria-controls="dropdown-menu4">
                            <span>Platform</span>
                            <span class="icon is-small">
                              <i class="fa fa-angle-down" aria-hidden="true"></i>
                            </span>
                          </button>
                        </div>
                        <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                          <div class="dropdown-content">
                            <form action="/leaderboards" method="get"></form>
                            <div class="dropdown-item">
                                <a href="/leaderboards">
                                    <p><option value="">All</option></p>
                                </a>
                            </div>
                            <div class="dropdown-item">
                                <a href="/leaderboards?show=twitter">
                                    <p><option value="twitter">Twitter</a></p>
                                </a>
                            </div>
                            <div class="dropdown-item">
                                <a href="/leaderboards?show=instagram">
                                    <p><option value="instagram">Instagram</option></p>
                                </a>
                            </div>
                            <div class="dropdown-item">
                                <a href="/leaderboards?show=facebook">
                                    <p><option value="facebook">Facebook</option></p>
                                </a>
                            </div>
                        </form>
                          </div>
                        </div>
                      </div>
        </div>
      </nav>
<div class="card">
<table class="table" style="width:100%;">
    <thead>
        <tr>
            <thead>
                <th>Ranking</th>
                <th>Platform</th>
                <th>Username</th>
                <th>Follower Count</th>
                <th>Score</th>
                <th>Viable for Beauty?</th>
                <th>Viable for Family?</th>
            </thead>
        </tr>
    </thead>
    <tbody>
        <% let i = 1; %>
        <% for(let influencer of influencers) { %>
            <tr>
                <td><%- i %></td>
                <td><%- influencer.platform.charAt(0).toUpperCase() + influencer.platform.substr(1)%></td>
                <td><%- influencer.screen_name%></td>
                <td><%- influencer.follower_count %></td>
                <td><% if(influencer.score * 100 <= 33) { %>
						<span id = "sad"><%- ((influencer.score) * 100).toFixed(2) + '%' %></span>
					<% } else if (influencer.score * 100 <= 60){ %>
						<span id = "okay"><%- ((influencer.score) * 100).toFixed(2) + '%' %></span>
					<% } else { %>
						<span id = "yey"><%- ((influencer.score) * 100).toFixed(2) + '%' %></span>
					<% } %></td>
                <td><% if (influencer.is_beauty == true) { %>
                    <span class="tag is-success is-medium">True</span>
                    <% } else { %>
                        <span class="tag is-danger is-medium">False</span>
                    <% } %></td>
                <td><% if (influencer.is_family == true) { %>
                    <span class="tag is-success is-medium">True</span>
                    <% } else { %>
                        <span class="tag is-danger is-medium">False</span>
                    <% } %></td>
            </tr>
            <% i++; %>
        <% } %>
    </tbody>
</table>
</div>
