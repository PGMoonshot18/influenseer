<%- include layouts/header %>
<a class="button is-primary" href='/' style="position: fixed; top: 80%; right:5%; height: 60px; width: 60px; border-radius:50%; z-index:999">
	<
</a>

<div class='columns'>
    <div class='column' style="position:relative">
        <div style="position:absolute; top:50%; right:50%"> 
            <span class='subtext'>User Profile</span>
            <br/>
            <span class='main_text'><a href="https://facebook.com/<%- username %>" ><%- username %></a></span>
        </div>
    </div>
    <div class='column' style="position:relative">
        <div style="position:absolute; top:50%; right:50%"> 
            <span class='subtext'>Followers</span>
            <br/>
            <span class='main_text'><%- follower_count %></span>
        </div>
    </div>
    <div class='column' style="position:relative">
        <div style="position:absolute; top:50%; right:50%"> 
            <span class='subtext'>Score</span>
            <br/>
            <%- (score * 100).toFixed(2) + '%' %>
        </div>
    </div>
</div>
<br>
<hr>


 <div class="columns is-multiline"> 
 <% for(let post of posts) {%>
    <div class="column is-one-third">
        <div class="card">
            <div class="card-content">
                <div class="content">
                    <%- post.text %>            
                </div>        
            </div>
            <footer class="card-footer">
                <p class="card-footer-item">Likes: <%- post.like_count %></p>
                <p class="card-footer-item">Angry: <%- post.angry_count %></p>
                <p class="card-footer-item">Wow: <%- post.happy_count %></p>
                <p class="card-footer-item">Laughs: <%- post.laughing_count %></p>
                <p class="card-footer-item">:Love: <%- post.love_count %></p>
                <p class="card-footer-item">Laughs: <%- post.sad_count %></p>
            </footer>
        </div>
    </div>
 <% } %>
 </div>
 
<%- include layouts/footer %>